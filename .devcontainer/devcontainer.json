{
	"name": "flutter_docker",
	"image": "astefan93/inventory:latest",
	// "remoteUser": "gitpod",
	"mounts": [
		"source=/dev/bus/usb,target=/dev/bus/usb,type=bind"
	],
	"runArgs": [
		"--privileged"
	],
	"extensions": [
		"dart-code.flutter",
		"Dart-Code.dart-code",
		"Dart-Code.flutter",
		"eamodio.gitlens",
		"xaver.clang-format",
		"vscode-icons-team.vscode-icons",
		"redhat.vscode-xml",
		"redhat.vscode-yaml"
	],
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/gitpod/workspace,type=bind,consistency=delegated",
	"workspaceFolder": "/home/gitpod/workspace"
}